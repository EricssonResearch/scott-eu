:adl-blocksworld
  a pddl:Domain ;
  oslc:instanceShape pddls:DomainShape ;
  rdfs:label "adl-blocksworld" ;
  rdfs:member :location ,
              :block ,
              :location-or-block ,
              :on ,
              :clear ,
              :moved ,
              :total-moved ,
              :move .

:location
  a pddl:PrimitiveType ;
  oslc:instanceShape pddls:PrimitiveTypeShape ;
  rdfs:label "location" .

:block
  a pddl:PrimitiveType ;
  oslc:instanceShape pddls:PrimitiveTypeShape ;
  rdfs:label "block" .

:location-or-block
  a pddl:EitherType ;
  oslc:instanceShape pddls:EitherTypeShape ;
  rdfs:member :location ,
              :block .

:on
  a rdfs:Class ;
  rdfs:subClassOf pddl:Predicate ;
  oslc:instanceShape pddls:PredicateShape ;
  rdfs:label "on" ;
  pddl:parameter :on-x ,
                 :on-y .

:on-x
  a pddl:Parameter ;
  oslc:instanceShape pddls:ParameterShape ;
  rdfs:label "x" ;
  pddl:type :location-or-block ;
  sh:order 1 .

:on-y
  a pddl:Parameter ;
  oslc:instanceShape pddls:ParameterShape ;
  rdfs:label "y" ;
  pddl:type :location-or-block ;
  sh:order 2 .

:clear
  a rdfs:Class ;
  rdfs:subClassOf pddl:Predicate ;
  oslc:instanceShape pddls:PredicateShape ;
  rdfs:label "clear" ;
  pddl:parameter :clear-x .

:clear-x
  a pddl:Parameter ;
  oslc:instanceShape pddls:ParameterShape ;
  rdfs:label "x" ;
  pddl:type :location-or-block ;
  sh:order 1 .

:moved
  a pddl:Function ;
  oslc:instanceShape pddls:FunctionShape ;
  rdfs:label "moved" ;
  pddl:parameter :moved-m .

:moved-m
  a pddl:Parameter ;
  oslc:instanceShape pddls:ParameterShape ;
  rdfs:label "m" ;
  pddl:type :location-or-block ;
  sh:order 1 .

:total-moved
  a pddl:Function ;
  oslc:instanceShape pddls:FunctionShape ;
  rdfs:label "total-moved" .

:move
  a rdfs:Class ;
  rdfs:subClassOf pddl:Action ;
  oslc:instanceShape pddls:ActionShape ;
  rdfs:label "move" ;
  pddl:parameter :move-b ,
                 :move-x ,
                 :move-y ;
  pddl:precondition [ a pddl:And ;
                      oslc:instanceShape pddls:PreconditionAndShape ;
                      pddl:argument [ a pddl:Not ;
                                      oslc:instanceShape pddls:NotShape ;
                                      pddl:argument [ a pddl:EQ ;
                                                      oslc:instanceShape pddls:BinaryComparatorShape ;
                                                      pddl:argument :move-b ,
                                                                    :move-y
                                                    ]
                                    ] ,
                                    [ a :clear ;
                                      :clear-x :move-b
                                    ] ,
                                    [ a :on ;
                                      :on-x :move-b ;
                                      :on-y :move-x
                                    ] ,
                                    [ a :clear ;
                                      :clear-x :move-y
                                    ]
                    ] ;
  pddl:effect [ a pddl:And ;
                oslc:instanceShape pddls:EffectAndShape ;
                pddl:argument [ a :on ;
                                :on-x :move-b ;
                                :on-y :move-y
                              ] ,
                              [ a pddl:Not ;
                                oslc:instanceShape pddls:EffectNotShape ;
                                pddl:argument [ a :on ;
                                                :on-x :move-b ;
                                                :on-y :move-x
                                              ]
                              ] ,
                              [ a :clear ;
                                :clear-x :move-x
                              ] ,
                              [ a pddl:Increase ;
                                oslc:instanceShape pddls:AssignmentOperatorShape ;
                                pddl:parameter [ a :moved ;
                                                 :moved-m :move-b
                                               ] ;
                                pddl:argument 1
                              ] ,
                              [ a pddl:Increase ;
                                oslc:instanceShape pddls:AssignmentOperatorShape ;
                                :parameter [ a :total-moved ] ;
                                :argument 1
                              ] ,
                              [ a pddl:When ;
                                oslc:instanceShape pddls:WhenShape ;
                                pddl:parameter [ a pddl:Not ;
                                                oslc:instanceShape pddls:NotShape ;
                                                pddl:argument [ a pddl:EQ ;
                                                                oslc:instanceShape pddls:BinaryComparatorShape ;
                                                                pddl:argument :move-y ,
                                                                              :table
                                                              ]
                                              ] ;
                                pddl:argument [ a pddl:Not ;
                                                oslc:instanceShape pddls:NotShape ;
                                                pddl:argument [ a :clear ;
                                                                :clear-x :move-y
                                                              ]
                                              ]
                              ]
                  ] .

:move-b
  a pddl:Parameter ;
  oslc:instanceShape pddls:ParameterShape ;
  rdfs:label "b" ;
  pddl:type :block ;
  sh:order 1 .

:move-x
  a pddl:Parameter ;
  oslc:instanceShape pddls:ParameterShape ;
  rdfs:label "x" ;
  pddl:type :location-or-block ;
  sh:order 2 .

:move-y
  a pddl:Parameter ;
  oslc:instanceShape pddls:ParameterShape ;
  rdfs:label "y" ;
  pddl:type :location-or-block ;
  sh:order 3 .

:table
  a pddl:Object ;
  oslc:instanceShape pddls:ObjectShape ;
  rdfs:label "table" .
