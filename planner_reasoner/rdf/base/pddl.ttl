@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <http://ontology.cf.ericsson.net/pddl/> .

# --- Abstract Classes
# These classes are never instantiated

:MetaClass
  a rdfs:Class .

:Type
  a rdfs:Class .

:Orderable
  a rdfs:Class .

:Parameterizable
  a rdfs:Class .

:LogicalOperator
  a rdfs:Class .

:BinaryOperator
  a rdfs:Class .

:BinaryComparator
  a rdfs:Class .

:Quantifier
  a rdfs:Class .

:AssignmentOperator
  a rdfs:Class .

# --- PDDL Meta Classes
# Users create subclasses of these classes

:Action
  a rdfs:Class ;
  rdfs:subClassOf :MetaClass ;
  rdfs:subClassOf :Parameterizable .

:Predicate
  a rdfs:Class ;
  rdfs:subClassOf :MetaClass ;
  rdfs:subClassOf :Parameterizable .

:Function
  a rdfs:Class ;
  rdfs:subClassOf :MetaClass ;
  rdfs:subClassOf :Parameterizable .

# --- PDDL Classes
# Users create instances of these classes

:Domain
  a rdfs:Class .

:Problem
  a rdfs:Class .

:PrimitiveType
  a rdfs:Class ;
  rdfs:subClassOf :Type .

:EitherType
  a rdfs:Class ;
  rdfs:subClassOf :Type ;
  rdfs:subClassOf rdf:Bag .

:Parameter
  a rdfs:Class ;
  rdfs:subClassOf rdf:Property ;
  rdfs:subClassOf :Orderable .

:Object
  a rdfs:Class .

:Constant
  a rdfs:Class .

# --- PDDL Instances

:total-time
  a :Function .

:argument
  a :Parameter ;
  sh:order 1 .

:left
  a :Parameter ;
  sh:order 1 .

:right
  a :Parameter ;
  sh:order 2 .

# --- PDDL Properties

:type
  a rdf:Property .

:constant
  a rdf:Property .

:predicate
  a rdf:Property .

:function
  a rdf:Property .

:action
  a rdf:Property .

:domain
  a rdf:Property .

:object
  a rdf:Property .

:init
  a rdf:Property .

:goal
  a rdf:Property .

:parameter
  a rdf:Property .

:precondition
  a rdf:Property .

:effect
  a rdf:Property .

:minimize
  a rdf:Property .

:maximize
  a rdf:Property .

# --- Logical Operators

:And
  a rdfs:Class ;
  rdfs:subClassOf :LogicalOperator ;
  rdfs:label "and" .

:Not
  a rdfs:Class ;
  rdfs:subClassOf :LogicalOperator ;
  rdfs:label "not" .

:Or
  a rdfs:Class ;
  rdfs:subClassOf :LogicalOperator ;
  rdfs:label "or" .

:Imply
  a rdfs:Class ;
  rdfs:subClassOf :LogicalOperator ;
  rdfs:label "imply" .

# --- Binary Operators

:Plus
  a rdfs:Class ;
  rdfs:subClassOf :BinaryOperator ;
  rdfs:label "+" .

:Minus
  a rdfs:Class ;
  rdfs:subClassOf :BinaryOperator ;
  rdfs:label "-" .

:Multiply
  a rdfs:Class ;
  rdfs:subClassOf :BinaryOperator ;
  rdfs:label "*" .

:Divide
  a rdfs:Class ;
  rdfs:subClassOf :BinaryOperator ;
  rdfs:label "/" .

# --- Binary Comparators

:EQ
  a rdfs:Class ;
  rdfs:subClassOf :BinaryComparator ;
  rdfs:label "=" .

:GT
  a rdfs:Class ;
  rdfs:subClassOf :BinaryComparator ;
  rdfs:label ">" .

:LT
  a rdfs:Class ;
  rdfs:subClassOf :BinaryComparator ;
  rdfs:label "<" .

:LE
  a rdfs:Class ;
  rdfs:subClassOf :BinaryComparator ;
  rdfs:label "<=" .

:GE
  a rdfs:Class ;
  rdfs:subClassOf :BinaryComparator ;
  rdfs:label ">=" .

# --- Quantifiers

:ForAll
  a rdfs:Class ;
  rdfs:subClassOf :Quantifier ;
  rdfs:subClassOf :Parameterizable ;
  rdfs:label "forall" .

:Exists
  a rdfs:Class ;
  rdfs:subClassOf :Quantifier ;
  rdfs:subClassOf :Parameterizable ;
  rdfs:label "exists" .

# --- Conditional Effect

:When
  a rdfs:Class ;
  rdfs:label "when" .

# --- Assignment Operators

:Assign
  a rdfs:Class ;
  rdfs:subClassOf :AssignmentOperator ;
  rdfs:label "assign" .

:ScaleUp
  a rdfs:Class ;
  rdfs:subClassOf :AssignmentOperator ;
  rdfs:label "scale-up" .

:ScaleDown
  a rdfs:Class ;
  rdfs:subClassOf :AssignmentOperator ;
  rdfs:label "scale-down" .

:Increase
  a rdfs:Class ;
  rdfs:subClassOf :AssignmentOperator ;
  rdfs:label "increase" .

:Decrease
  a rdfs:Class ;
  rdfs:subClassOf :AssignmentOperator ;
  rdfs:label "decrease" .
