@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix : <http://ontology.cf.ericsson.net/planning_ontology/> .

#studied from the bnf specification of PDDL 2.1. https://www.jair.org/media/1129/live-1129-2132-jair.pdf without durative actions

:OrderedArgument a rdf:Class .  #all subclasses of OrderedArgument will have an order property sh:order to show the relative position of that element in the parent

:Action a rdf:Class .
:hasPrecondition a rdf:Property .
:hasEffect a rdf:Property .

:Precondition a rdf:Class .

:Effect a rdf:Class .
:hasEffectArgument a rdf:Property .

:TypedVariable a rdf:Class .
:hasVariable a rdf:Property .
:hasVariableType a rdf:Property .

:Variable a :OrderedArgument .
:VariableType a :OrderedArgument .

:PredicateType a rdf:Class . #no need to be ordered
:hasPredicateTypeArgument a rdf:Property .

:PredicateTypeArgument a :OrderedArgument .

:Predicate a :OrderedArgument .
:hasPredicateType a rdf:Property .
:hasPredicateArgument a rdf:Property .

:PredicateArgument a :OrderedArgument .

:GoalDescription a rdf:Class .
:hasGoalDescriptionArgument a rdf:Property .

:FluentType a :OrderedArgument . #no need to be ordered!

:FluentTypeArgument a :OrderedArgument .
:hasFluentTypeArgument a rdf:Property .

:Fluent a :OrderedArgument .
:hasFluentType a rdf:Property .
:hasFluentArgument a rdf:Property .

:FluentArgument a :OrderedArgument .

:FExp a :OrderedArgument .
:hasArgument a rdf:Property .

:NumericLiteral a :OrderedArgument .
:hasValue a rdf:Property .

:MinusFunction a rdf:OrderedArgument ;
                 rdfs:label "-"^^xsd:string .

:BinaryComparison a :OrderedArgument . #e.g. binary comparision operators are only allowed in precondition
:hasFExp a rdf:Property .

:AssignmentOperator a :OrderedArgument .  #are possible in effects over fluents (decrease, increase, scaleup, assign, scaledown
:hasFExpArgument a rdf:Property .

#logical operators

:And a rdf:OrderedArgument ;
     rdfs:label "and"^^xsd:string .

:AndGoalDescription a :And .
:hasArgumentInGoalDescription a rdf:Property .

:AndEffect a :And .
:hasArgumentInEffect a rdf:Property .

:Not a :OrderedArgument ;
     rdfs:label "not"^^xsd:string .

:NotGoalDescription a :Not .

:NotEffect a :Not .

:Or a :OrderedArgument ;
    rdfs:label "or"^^xsd:string .

:OrGoalDescription a :Or .

:OrEffect a :Or .

:Imply a :OrderedArgument ;
       rdfs:label "imply"^^xsd:string .

#for conditional effect, allowed only in the effect
:When a :OrderedArgument ;
     rdfs:label "when"^^xsd:string .

#quantifiers

:Exists a :OrderedArgument ;
        rdfs:label "exists"^^xsd:string .
:hasTypedVariable a rdf:Property .
:hasGoalDescription a rdf:Property .

:ForAll a :OrderedArgument ;
        rdfs:label "forall"^^xsd:string .

:ForallEffect a :ForAll .

:ForallGoalDescription a :ForAll.

#binary comparison only allowed in precondition
:GT a :BinaryComparison ;
    rdfs:label ">"^^xsd:string .
:LT a :BinaryComparison ;
    rdfs:label "<"^^xsd:string .
:EQ a :BinaryComparison ;
    rdfs:label "="^^xsd:string .
:GE a :BinaryComparison ;
    rdfs:label ">="^^xsd:string .
:LE a :BinaryComparison ;
    rdfs:label "<="^^xsd:string .

#binary operations over fluents, allowed in precondition and effect
:BinaryOperator a :OrderedArgument .  #are possible in preconditions and effects over fluents (+, -, * and /)

:Plus a :BinaryOperator ;
      rdfs:label "+"^^xsd:string .
:Minus a :BinaryOperator ;
       rdfs:label "-"^^xsd:string .
:Multply a :BinaryOperator ;
         rdfs:label "*"^^xsd:string .
:Divide a :BinaryOperator ;
        rdfs:label "/"^^xsd:string .

#assignment operators allowed in effect, they can be done only over fluent
:Increase a :AssignmentOperator ;
          rdfs:label "increase"^^xsd:string .
:Decrease a :AssignmentOperator ;
          rdfs:label "decrease"^^xsd:string .
:Assign a :AssignmentOperator ;
        rdfs:label "assign"^^xsd:string .
:ScaleUp rdf:type :AssignmentOperator ;
         rdfs:label "scale-up"^^xsd:string .
:ScaleDown a :AssignmentOperator ;
           rdfs:label "scale-down"^^xsd:string .
