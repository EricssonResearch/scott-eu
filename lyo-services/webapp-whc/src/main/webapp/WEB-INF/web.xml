<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  id="WebApp_ID" version="3.0">
  <display-name>Warehouse Controller Adaptor (dev)</display-name>

  <context-param>
    <description>Base URI for the adaptor.</description>
    <param-name>se.ericsson.cf.scott.sandbox.whc.servlet.baseurl</param-name>
    <param-value>http://localhost:8180</param-value>
  </context-param>
  <context-param>
    <!--TODO remove-->
    <param-name>se.ericsson.cf.scott.sandbox.whc.kb.query_uri</param-name>
    <param-value>http://fuseki.aide.md.kth.se/scott-warehouse/query</param-value>
  </context-param>
  <context-param>
    <param-name>se.ericsson.cf.scott.sandbox.whc.kb.update_uri</param-name>
    <param-value>http://fuseki.aide.md.kth.se/scott-warehouse/update</param-value>
  </context-param>
  <context-param>
<!--    TODO remove in favour of the base URI-->
    <param-name>se.ericsson.cf.scott.sandbox.whc.planner.cf_uri</param-name>
    <param-value>http://localhost:3020/planner/planCreationFactory</param-value>
  </context-param>
  <context-param>
    <param-name>se.ericsson.cf.scott.sandbox.whc.twin.base_uri</param-name>
    <param-value>http://sandbox-twin:8080/</param-value>
  </context-param>
  <context-param>
    <!--TODO remove-->
    <param-name>se.ericsson.cf.scott.sandbox.whc.trs.mqtt.broker</param-name>
    <param-value>tcp://localhost:1883</param-value>
  </context-param>

  <listener>
    <description>Listener for ServletContext lifecycle changes</description>
    <listener-class>se.ericsson.cf.scott.sandbox.whc.servlet.ServletListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>oslc-servlet</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>se.ericsson.cf.scott.sandbox.whc</param-value>
    </init-param>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>se.ericsson.cf.scott.sandbox.whc.servlet.Application</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>oslc-servlet</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>
</web-app>
